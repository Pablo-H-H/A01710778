<!DOCTYPE html>
<html lang="es">
    <head>
        <title>Laboratorio 5</title>
        <!-- <link rel="stylesheet" href="estilo.min.css"> -->
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bulma@0.9.4/css/bulma.min.css">
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1">
    </head>

    <body>
        <header>
            <section class="hero is-primary">
                <div class="hero-body">
                    <% for (let funcion of permisos) { %>
                        <% if (funcion.funcion == 'ver') { %>
                        <a class="navbar-item" href="/construcciones">
                            Construcciones
                        </a>
                        <% } %>
                
                        <% if (funcion.funcion == 'construir') { %>
                        <a class="navbar-item" href="/construcciones/construir">
                            Construir
                        </a>
                        <% } %>
                    <% } %>


                    <% if (username == '') { %> 
                        <a href="/users/signup" class="button is-primary">
                            <strong>Registrarse</strong>
                        </a>
                        <a href="/users/login" class="button is-light">
                            Entrar
                        </a>
                    <% } else { %>
                        <span>
                            Hola <strong><%= username %> | </strong> 
                        </span>
                        <a href="/users/logout" class="button is-danger">
                            Salir
                        </a>
                    <% } %>
                </div>
            </section>

        </header>